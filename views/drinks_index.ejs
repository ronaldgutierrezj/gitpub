<html>
    <head>
        <meta charset="utf-8">
        <title>Drinks App</title>  
        <style type="text/css">
            body {
                color: blanchedalmond;
                background-color: steelblue;
                }
                </style>
    </head>
    <body>
        <h1>Welcome to gitPub</h1>
        <h2>Drinks</h2>
        <ul>
            <% for(let i=0; i< allDrinks.length;i++){%>
                <li>
                    <a href="/drinks/<%=i%>">
                    <%=allDrinks[i].name.charAt(0).toUpperCase() + allDrinks[i].name.slice(1) %></a>
                </li>
            <%} %>
        </ul>
        <br>
        <br>
        <a href ="/">back to main menu</a>

    </body> 
</html>